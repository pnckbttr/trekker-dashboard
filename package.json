{
  "name": "@obsfx/trekker-dashboard",
  "version": "1.5.0",
  "description": "Kanban board dashboard for Trekker issue tracker. Connects to local .trekker database.",
  "type": "module",
  "bin": {
    "trekker-dashboard": "./bin/trekker-dashboard.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "vite",
    "dev:server": "TREKKER_DB_PATH=.trekker/trekker.db bun --watch src/server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "start": "bun run src/cli.ts",
    "release:patch": "bun run build && npm version patch && npm publish --access public",
    "release:minor": "bun run build && npm version minor && npm publish --access public",
    "release:major": "bun run build && npm version major && npm publish --access public"
  },
  "keywords": [
    "trekker",
    "kanban",
    "dashboard",
    "issue-tracker",
    "task-management",
    "sqlite",
    "vite",
    "hono",
    "bun"
  ],
  "author": "Omercan Balandi <balandiomer@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/obsfx/trekker",
  "repository": {
    "type": "git",
    "url": "https://github.com/obsfx/trekker-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/obsfx/trekker-dashboard/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.19",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^13.1.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.7.0",
    "lucide-react": "^0.562.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.12.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.7.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/bun": "^1.2.2",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.4.0",
    "concurrently": "^9.1.0",
    "postcss": "^8.5.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  }
}
